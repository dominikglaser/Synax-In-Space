{
  "name": "synax-in-space",
  "version": "1.0.0",
  "description": "Phaser 3 + TypeScript side-scrolling shooter",
  "type": "module",
  "scripts": {
    "assets:clean": "rimraf assets/generated",
    "assets:download": "node scripts/download-assets.mjs",
    "assets:svg": "svgo -f assets/raw/vector -o assets/raw/vector",
    "assets:atlas": "node scripts/build-atlas.mjs || echo 'No sprites found or ImageMagick not installed. Using procedural assets.'",
    "assets:opt": "pngquant --force --output assets/generated/atlases/game.png -- assets/generated/atlases/game.png && optipng -o7 assets/generated/atlases/game.png",
    "assets:audio": "audiosprite -o assets/generated/audio/sfx -e mp3,ogg --gap 0 --bitrate 192 assets/raw/audio/*.wav",
    "assets:build": "npm run assets:svg && npm run assets:atlas && npm run assets:opt && npm run assets:audio",
    "assets:setup": "npm run assets:download && npm run assets:atlas",
    "assets:watch": "chokidar 'assets/raw/**/*' -c 'npm run assets:build'",
    "seed:print": "node scripts/print-seed.mjs",
    "game:starfield": "node scripts/gen-starfield.mjs",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"*.{json,md}\""
  },
  "dependencies": {
    "phaser": "^3.70.0",
    "howler": "^2.2.4",
    "seedrandom": "^3.0.5",
    "simplex-noise": "^4.0.1",
    "sat": "^0.9.0",
    "bezier-easing": "^2.1.0",
    "lodash-es": "^4.17.21",
    "colord": "^2.9.3",
    "phaser3-rex-plugins": "^1.1.86",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.22.4",
    "json5": "^2.2.3",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/howler": "^2.2.11",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/ui": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.1.0",
    "spritesheet-js": "^0.4.0",
    "sharp": "^0.33.2",
    "globby": "^14.0.1",
    "rimraf": "^5.0.5",
    "svgo": "^3.3.2",
    "pngquant-bin": "^7.0.0",
    "optipng-bin": "^8.0.0",
    "gifsicle": "^5.2.0",
    "audiosprite": "^0.7.2",
    "chokidar": "^3.6.0"
  }
}


